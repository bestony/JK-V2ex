<view id="new" style="width: 100%;display:flex;background-color: #FFFFFF;flex-direction:column;">
 <text style="color:#4ABC6A;font-size:17px;font-weight:bold;font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;height:30px;margin:5px;">最新主题</text>
 
<view wx:for="{{hot}}" wx:for-index="idx" wx:for-item="post">
    <block wx:if="{{idx < 3}}">
        <view style="flex-direction:column;flex-wrap:wrap;border-bottom:5px solid #EFEFF3;" id="{{post.id}}" catchtap="navTo">
                <view style="flex-basis: 100%; display: flex;justify-content: space-between;margin:5px;">
                    <image src="{{post.member.avatar_mini}}" style="width:24px;height:24px;" />
                    <text  style="width:20%;font-size:14px;color:#888">{{post.member.username}}</text>
                    <text style="font-size:14px;color:#888">15:30</text>
                </view>
                <view style="margin:5px;">
                    <text style="font-size:17px;" >{{ post.title }}</text>
                </view>
                <view style="flex-basis: 100%; display: flex;justify-content: space-between;margin:5px;">
                    <text style="font-size:13px;color:#888">{{ post.replies }} 次回复</text> 
                    <text style="font-size:13px;color:#888;border:solid 1px;border-radius:3px;">{{post.node.title}}</text>
                </view>
        </view>
    </block>
</view>

</view>

